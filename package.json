{
  "name": "gobbldygook",
  "version": "3.0.0-rc.2",
  "private": true,
  "workspaces": [
    "modules/*"
  ],
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "singleQuote": true,
    "semi": false,
    "bracketSpacing": false,
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "useTabs": true
        }
      }
    ]
  },
  "jest": {
    "setupFiles": [
      "./config/mocha-harness.js"
    ],
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "collectCoverageFrom": [
      "modules/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/modules/gob-hanson-format/parse-hanson-string.js"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "globals": {
      "DEVELOPMENT": false,
      "PRODUCTION": false,
      "TESTING": true,
      "VERSION": "3.0.0-test"
    },
    "resetModules": true,
    "moduleNameMapper": {
      "^.+\\.scss$": "<rootDir>/config/flow/css.js.flow"
    },
    "testPathIgnorePatterns": [
      "\\.support.js$",
      "__support__"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "history"
    ]
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config .webpackrc.js --bail --progress",
    "build-dev": "webpack --config .webpackrc.js --bail --progress --devtool=source-map",
    "build-peg": "pegjs --allowed-start-rules Result,Filter < modules/gob-hanson-format/parse-hanson-string.pegjs | babel-stdin | prettier $npm_package_config_prettier --stdin > modules/gob-hanson-format/parse-hanson-string.js",
    "bugsnag": "curl -d 'apiKey=7e393deddaeb885f5b140b4320ecef6b' -d 'repository=https://github.com/hawkrives/gobbldygook' -d 'revision=$(git rev-parse --verify HEAD)' 'https://notify.bugsnag.com/deploy'",
    "count": "echo $(fd -e scss | wc -l) files && echo $(fd -e scss | xargs wc -l | gsort | tail -n1) lines",
    "cover": "jest --coverage && open coverage/index.html",
    "flow": "flow",
    "lint": "eslint --cache *.js .*.js modules/",
    "netlify": "npm run build -- --no-progress && npm run bugsnag",
    "pretty": "prettier --write 'config/**/*.js' 'modules/**/*.{js,scss}' '{.,}*.js'",
    "p": "pretty-quick",
    "serve-production": "cross-env NODE_ENV=production webpack-dev-server --config .webpackrc.js --progress",
    "start": "webpack-dev-server --config .webpackrc.js --progress",
    "stats": "cross-env NODE_ENV=production npm run stats-dev",
    "stats-dev": "webpack --config .webpackrc.js --bail --profile --json > stats.json && echo 'open http://webpack.github.io/analyse/'",
    "test": "jest",
    "test-students": "./modules/gob-cli/test-student test/example-students",
    "watch": "webpack --watch --config .webpackrc.js --bail --progress --devtool=source-map"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.3",
    "babel-jest": "22.4.3",
    "babel-plugin-lodash": "3.3.2",
    "babel-plugin-styled-components": "1.5.1",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-plugin-transform-inline-environment-variables": "6.8.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-react-constant-elements": "6.23.0",
    "babel-plugin-transform-react-display-name": "6.25.0",
    "babel-plugin-transform-react-inline-elements": "6.22.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "6.24.1",
    "babel-stdin": "1.1.1",
    "coveralls": "3.0.0",
    "cross-env": "5.1.4",
    "del": "3.0.0",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-babel": "5.0.0",
    "eslint-plugin-flowtype": "2.46.1",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-react": "7.7.0",
    "flow-bin": "0.64.0",
    "flow-remove-types": "1.2.3",
    "jest": "22.4.3",
    "jest-matcher-utils": "22.4.3",
    "pegjs": "0.10.0",
    "prettier": "1.12.0",
    "pretty-quick": "1.4.1"
  }
}
