{
  "name": "gobbldygook",
  "version": "3.0.0alpha10",
  "description": "A course scheduling app for St. Olaf College",
  "main": "dist/app.js",
  "browser": "dist/index.html",
  "private": true,
  "repository": "hawkrives/gobbldygook",
  "author": "Hawken MacKay Rives",
  "license": "MIT",
  "scripts": {
    "fix-gulp-watch": "cd node_modules/gulp/node_modules/vinyl-fs/node_modules/glob-watcher/node_modules/gaze/node_modules/globule && npm i lodash@latest",
    "fix-browser-sync": "cd node_modules/browser-sync/node_modules/glob-watcher/node_modules/gaze/node_modules/globule && npm i lodash@latest",
    "fix": "npm run fix-gulp-watch & npm run fix-browser-sync & wait",

    "cloc": "cloc ./ --by-file-by-lang --exclude-dir=dist,gulp,node_modules,playground,test --force-lang=CSS,styl",
    "check": "npm outdated --depth 0",
    "clean": "rm -rf dist/ && npm run prepare & wait",
    "prepare": "mkdir -p dist/data/courses dist/fonts",

    "precopy": "npm run prepare",
    "prebuild": "npm run prepare & npm run lint & wait",
    "prewatch": "npm run prepare & npm run lint & wait",

    "copy-courses": "cp -f node_modules/sto-courses/info.json dist/data/courses && cp -f -R node_modules/sto-courses/terms dist/data/courses",
    "copy-html": "cp -f app/index.html app/.htaccess dist/",
    "copy-fonts": "cp -f -R app/fonts dist/",
    "copy-icons": "cp -f app/icons/font/ionicons.woff dist/fonts/",
    "copy": "npm run copy-courses & npm run copy-html & npm run copy-fonts & npm run copy-icons & wait",

    "build-scripts": "browserify --debug -e app/index.js -t 6to5ify --insert-globals | exorcist dist/app.js.map > dist/app.js",
    "build-styles": "stylus app/styles/app.styl --out dist/ --use autoprefixer-stylus --compress",
    "build": "npm run copy & npm run build-scripts & npm run build-styles & wait",

    "watch-scripts": "watchify -v --debug -e app/index.js -o dist/app.js -t 6to5ify --insert-globals",
    "watch-styles": "stylus --watch app/styles/app.styl --out dist/ --use autoprefixer-stylus --compress",
    "watch-lint": "nodemon --watch app --watch test --ext js --exec npm run-script lint",
    "watch": "npm run copy & npm run watch-lint & npm run watch-scripts & npm run watch-styles & wait",

    "_browser-sync": "browser-sync start --config ./bs-config.js",
    "serve": "npm run watch & npm run _browser-sync & wait",

    "lint": "jscs app/ test/",
    "test": "jest",
    "travis": "npm run lint & npm run build & npm run test & wait"
  },
  "dependencies": {
    "bluebird": "2.8.2",
    "deep-eql": "0.1.3",
    "humanize-plus": "1.5.0",
    "idb-range": "2.0.0",
    "immutable": "3.6.2",
    "keymage": "1.1.0",
    "lodash": "2.4.1",
    "marked": "0.3.2",
    "node-uuid": "1.4.2",
    "react": "0.12.2",
    "react-dnd": "0.6.2",
    "react-router": "0.11.6",
    "reflux": "0.2.3",
    "stickyfill": "1.1.1",
    "sto-areas": "2.3.7",
    "sto-courses": "3.0.3",
    "sto-helpers": "3.0.6",
    "sto-sis-time-parser": "1.0.8",
    "treo": "0.4.1",
    "whatwg-fetch": "0.6.1"
  },
  "devDependencies": {
    "6to5-core": "2.13.7",
    "6to5-jest": "1.0.1",
    "6to5ify": "3.1.2",
    "autoprefixer-stylus": "^0.5.0",
    "browser-sync": "1.9.1",
    "browserify": "8.1.1",
    "csswring": "3.0.0",
    "dom-storage": "2.0.1",
    "exorcist": "0.1.6",
    "jest-cli": "0.2.1",
    "jscs": "1.10.0",
    "jscs-jsdoc": "0.4.0",
    "mold-source-map": "0.3.0",
    "nodemon": "1.3.2",
    "stylus": "^0.49.3",
    "watchify": "2.2.1"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/6to5-jest",
    "testDirectoryName": "test",
    "testPathDirs": [
      "test"
    ]
  }
}
