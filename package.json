{
  "name": "gobbldygook",
  "version": "3.0.0-alpha-12",
  "description": "A course scheduling app for St. Olaf College",
  "main": "app/index.js",
  "private": true,
  "repository": "hawkrives/gobbldygook",
  "author": "Hawken MacKay Rives",
  "license": "MIT",
  "config": {
    "browserify": "--debug -e app/index.js -t [ 6to5ify --experimental ]",
    "sass": "--stdout",
    "uglify": "--source-map-root ./app --in-source-map dist/app.js.map --source-map dist/app.min.js.map --compress --mangle --screw-ie8"
  },
  "scripts": {
    "fix-browser-sync": "cd node_modules/browser-sync/node_modules/glob-watcher/node_modules/gaze/node_modules/globule && npm i lodash@latest",
    "fix": "npm run fix-browser-sync & wait",

    "cloc": "cloc ./ --by-file-by-lang --exclude-dir=dist,node_modules,playground,test --force-lang=CSS,styl",
    "check": "npm outdated --depth 0",
    "clean": "rm -rf dist/",

    "copy-courses": "mkdir -p dist/data/courses/ && cp -f node_modules/sto-courses/info.json dist/data/courses && cp -f -R node_modules/sto-courses/terms dist/data/courses",
    "copy-html": "mkdir -p dist/ && cp -f app/index.html app/.htaccess dist/",
    "copy-fonts": "mkdir -p dist/ && cp -f -R app/fonts dist/",
    "copy-icons": "mkdir -p dist/fonts/ && cp -f app/icons/font/ionicons.woff dist/fonts/",
    "copy": "npm run copy-courses & npm run copy-html & npm run copy-fonts & npm run copy-icons & wait",

    "build-scripts": "browserify $npm_package_config_browserify | exorcist dist/app.js.map > dist/app.js",
    "build-styles": "node-sass app/styles/app.scss $npm_package_config_sass | autoprefixer | csswring - > dist/app.css",

    "prebuild": "mkdir -p dist && npm run lint",
    "build": "npm run copy & npm run build-scripts & npm run build-styles & wait",

    "watch-scripts": "watchify --verbose -o dist/app.js $npm_package_config_browserify",
    "watch-styles": "nodemon --watch app/styles --ext scss --exec npm run-script build-styles",
    "watch-lint": "nodemon --watch app --watch test --ext js --exec npm run lint",

    "prewatch": "npm run lint",
    "watch": "npm run copy & npm run watch-lint & npm run watch-scripts & npm run watch-styles & wait",

    "browser-sync": "browser-sync start --config ./bs-config.js",

    "uglify": "uglifyjs dist/app.js --output dist/app.min.js $npm_package_config_uglify",
    "lint": "jscs app/ test/",
    "test": "jest",

    "start": "npm run serve",
    "serve": "npm run watch & npm run browser-sync & wait",
    "travis": "npm run lint && npm run build && npm run test",
    "publish": "npm run clean && npm run build && npm run uglify"
  },
  "dependencies": {
    "bluebird": "^2.9.4",
    "combinations-generator": "^1.0.1",
    "humanize-plus": "^1.5.0",
    "idb-range": "^2.0.0",
    "immutable": "^3.6.2",
    "keymage": "^1.1.0",
    "lodash": "^3.0.1",
    "marked": "^0.3.2",
    "node-uuid": "^1.4.2",
    "present": "0.0.6",
    "react": "^0.12.2",
    "react-dnd": "^0.6.3",
    "react-router": "^0.11.6",
    "reflux": "^0.2.3",
    "stickyfill": "^1.1.1",
    "sto-areas": "^2.3.8",
    "sto-courses": "^3.0.5",
    "sto-helpers": "^4.2.3",
    "sto-sis-time-parser": "^2.0.0",
    "treo": "^0.4.1",
    "whatwg-fetch": "^0.7.0"
  },
  "devDependencies": {
    "6to5-core": "^3.2.0",
    "6to5-jest": "^3.0.0",
    "6to5ify": "^4.0.0",
    "autoprefixer-stylus": "^0.5.0",
    "browser-sync": "^1.9.1",
    "browserify": "^8.1.1",
    "csswring": "3.0.0",
    "dom-storage": "^2.0.1",
    "exorcist": "^0.1.6",
    "jest-cli": "^0.2.2",
    "jscs": "^1.10.0",
    "jscs-jsdoc": "^0.4.0",
    "nodemon": "^1.3.5",
    "stylus": "^0.49.3",
    "uglify-js": "^2.4.16",
    "watchify": "^2.3.0"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/6to5-jest",
    "testDirectoryName": "test",
    "testPathDirs": [
      "test"
    ]
  }
}
