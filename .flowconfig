[version]
^0.31.0


[ignore]
; i don't even know why it checks json files
.*\.json

; stuffs
.*/node_modules/fbjs
.*/node_modules/.*/node_modules/fbjs


[libs]
./node_modules/fbjs/flow/lib
./node_modules/iflow-bluebird/index.js.flow
./node_modules/iflow-lodash/index.js.flow


[options]
esproposal.class_static_fields=enable
esproposal.class_instance_fields=enable

; allow flow to find the modules that we require with src/
module.name_mapper='^src/\(.*\)' -> '<PROJECT_ROOT>/src/\1'

; allow require'ing non-js files (like webpack does)
module.name_mapper.extension='css' -> '<PROJECT_ROOT>/config/flow/css'
module.name_mapper.extension='scss' -> '<PROJECT_ROOT>/config/flow/css'
module.name_mapper='^\(.*\)\.\(jpg\|png\|gif\|eot\|otf\|webp\|svg\|ttf\|woff\|woff2\|mp4\|webm\)$' -> '<PROJECT_ROOT>/config/flow/file'

suppress_type=$FlowIssue
suppress_type=$FlowFixMe
