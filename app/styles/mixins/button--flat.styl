@require 'color'
@require 'button'

// Flat button
button--flat($color = 'black', $dark = false) {
	button()

	color: get-color($color, '500')
	background-color: transparent

	&:hover, &:focus {
		background-color: $dark ? rgba(#ccc, 0.15) : rgba(#999, 0.20)
	}

	&:active {
		background-color: $dark ? rgba(#ccc, 0.25) : rgba(#999, 0.40)
	}

	&[disabled] {
		$accent = $dark ? 'dark' : 'light'
		cursor: default
		color: get-color('disabled', 'foreground--' + $accent)
		&:hover, &:focus, &:active {
			background-color: transparent
		}
	}
}
