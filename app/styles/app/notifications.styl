@require '../mixins/material-shadow'
@require '../mixins/remove-button'
@require '../mixins/button--flat'
@require '../mixins/progress-bar'
@require '../mixins/color'

.notification-enter {
	opacity: 0.01
	transition: opacity .5s ease-in
	tansform: translateX(0)
}

.notification-enter.notification-enter-active {
	opacity: 1
	tansform: translateX(-100%)
}

.notification-leave {
	opacity: 1
	transition: .5s ease-in
	tansform: translateX(0)
}

.notification-leave.notification-leave-active {
	opacity: 0.01
	tansform: translateX(-100%)
}

.notification-list {
	position: fixed
	bottom: $page-edge-padding
	left: $page-edge-padding

	padding: 0
	margin: 0
	list-style: none
	z-index: 10
}

.notification-capsule {
	position: relative

	display: flex
	flex-flow: row nowrap
	align-items: center

	background: $black
	color: #f1f1f1

	font-size: 0.9em

	min-height: 46px
	min-width: 288px
	max-width: 350px

	padding: 0.9em

	material-shadow(1)
	border-radius: 2px

	& + & {
		margin-top: 1em
	}
}

.notification-message {
	font-weight: 500
	font-size: 1em
	margin: 0
}

.notification-content {
	flex: 1
}

.notification-type--message {

}

.notification-type--error {
	background: get-color('red')
	color: $white
}

.notification-type--progress {
	.progress-container {
		display: flex
		flex-flow: row nowrap
		align-items: center
	}
	progress {
		progress-bar($color: get-color('gray', '300'))
		flex: 1
		height: 10px
		overflow: hidden
		border: solid 1px get-color('gray', '300')
		border-radius: 3px
	}
	output {
		color: get-color('gray', '300')
		margin-left: 0.5em
	}
}

.close-notification {
	remove-button()
	button--flat()

	margin-left: 0.9em
	padding: 2px 6px 1px
}
